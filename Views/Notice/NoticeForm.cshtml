@using NoticeBoardApp.Models.ViewModels
@model NoticeViewModel

@{
    ViewData["Title"] = "Notice Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-5">
    <h1 class="h4 fw-bold">Notice Form</h1>
</div>

<hr class="mt-1 mb-4" />

<div class="row">
    <div class="col-md-6 pl-0">
        <form method="post" asp-action="Save" asp-controller="Notice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" type="text" class="form-control" placeholder="Enter Title">
                <span asp-validation-for="Title" class="form-text text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <label asp-for="SubTitle"></label>
                <input asp-for="SubTitle" type="text" class="form-control" placeholder="Enter Subtitle">
                <span asp-validation-for="SubTitle" class="form-text text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Details"></label>
                <textarea asp-for="Details" type="text" class="form-control" placeholder="Enter Details"></textarea>
                <span asp-validation-for="Details" class="form-text text-danger"></span>
            </div>

            <input asp-for="Id" type="hidden">

            <button class="btn btn-success mt-4" type="submit">Save</button>
            <br />
            <a class="btn btn-primary mt-4" asp-controller="Notice" asp-action="Index">Back To Notice Board</a>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}